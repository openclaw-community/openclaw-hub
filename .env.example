# OpenClaw Hub Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it's in .gitignore)

# ==============================================================================
# MEDIA GENERATION PROVIDERS
# ==============================================================================

# OpenAI (for Sora 2 Pro)
# Get your key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-proj-your-key-here

# Kie.ai (cost-effective alternative)
# Get your key from: https://kie.ai/dashboard
KIE_API_KEY=your-kie-api-key-here

# ==============================================================================
# VERSION CONTROL
# ==============================================================================

# GitHub Personal Access Token
# Create at: https://github.com/settings/tokens
# Required scopes: repo, workflow
GITHUB_TOKEN=ghp_your-token-here

# GitLab Token (if using GitLab)
# GITLAB_TOKEN=glpat-your-token-here

# ==============================================================================
# DATA SOURCES (Optional)
# ==============================================================================

# Google Drive
# Path to your service account credentials JSON
# GOOGLE_DRIVE_CREDENTIALS_PATH=/path/to/credentials.json

# ==============================================================================
# SECURITY & LOGGING
# ==============================================================================

# Audit log location
AUDIT_LOG_PATH=./logs/audit.log

# Enable rate limiting (recommended)
ENABLE_RATE_LIMITING=true

# Maximum requests per hour per provider
MAX_REQUESTS_PER_HOUR=100

# ==============================================================================
# DEVELOPMENT (Optional)
# ==============================================================================

# Debug mode (shows more verbose logging)
# DEBUG=false

# Config file location (if not using default)
# CONFIG_PATH=./config/openclaw-hub.yaml
